<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC 
    "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="jdbc.properties"></properties>
	<typeAliases>
		<typeAlias alias="User" type="com.sc.po.User" />
		<typeAlias alias="OrderBean" type="com.sc.po.OrderBean" />
		<typeAlias alias="ItemBean" type="com.sc.po.ItemBean" />
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/sc/mapper/UserMapper.xml" />
		<mapper resource="com/sc/mapper/ItemBeanMapper.xml" />
		<mapper resource="com/sc/mapper/OrderBeanMapper.xml" />
	</mappers>
</configuration>